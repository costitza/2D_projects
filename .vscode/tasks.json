{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFML App",
            "type": "shell",
            "command": "g++",
            "args": [
                "${fileDirname}\\*.cpp",
                "-ID:/sfml/SFML-2.6.1/include",
                "-LD:/sfml/SFML-2.6.1/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-o", "app.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
